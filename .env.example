# OPENAI API CONFIGURATION
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=2000

# TOKEN THRESHOLDS
# Trigger summarization when raw_messages exceeds this token count
TOKEN_THRESHOLD_RAW=10000
# Trigger compression when summary exceeds this token count
SUMMARY_TOKEN_THRESHOLD=2000
# Number of recent messages to keep after summarization (1 turn = 2 messages)
KEEP_RECENT_N=16

# QUERY UNDERSTANDING CONFIGURATION
# Number of recent messages for query rewriting context (light context)
LIGHT_CONTEXT_SIZE=8

# Number of recent messages for augmentation context
RECENT_CONTEXT_SIZE=10

# Maximum consecutive clarification attempts before forcing answer
MAX_CLARIFICATION_ROUNDS=2

# MODULE-SPECIFIC LLM SETTINGS
# Summarizer: low temp for consistent extraction
SUMMARIZER_TEMPERATURE=0.2
SUMMARIZER_MAX_TOKENS=2000

# Rewriter: low temp for accurate query understanding
REWRITER_TEMPERATURE=0.2
REWRITER_MAX_TOKENS=1000

# Clarifier: slightly higher for natural questions
CLARIFIER_TEMPERATURE=0.3
CLARIFIER_MAX_TOKENS=500

# Answer: higher temp for natural, creative responses
ANSWER_TEMPERATURE=0.7
ANSWER_MAX_TOKENS=2000

# SESSION CONFIGURATION
SESSION_DATA_DIR=data/sessions

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_TO_CONSOLE=true