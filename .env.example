# ChatTMT Environment Configuration

# OPENAI API CONFIGURATION
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=2000

# TOKEN THRESHOLDS
TOKEN_THRESHOLD_RAW=10000
SUMMARY_TOKEN_THRESHOLD=2000
# Number of recent messages to keep after summarization (1 turn = 2 messages)
KEEP_RECENT_N=16

# QUERY UNDERSTANDING CONFIGURATION
# Number of recent messages for query rewriting context
LIGHT_CONTEXT_SIZE=8
# Number of recent messages for augmentation context
RECENT_CONTEXT_SIZE=10
MAX_CLARIFICATION_ROUNDS=2

# SESSION CONFIGURATION
SESSION_DATA_DIR=data/sessions

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_TO_CONSOLE=true