# ChatTMT Environment Configuration

# OpenAI API Key (required for OpenAI client)
OPENAI_API_KEY=sk-your-api-key-here

# Model Configuration
OPENAI_MODEL=gpt-4o-mini

# Token Threshold for Summarization (default: 10000)
TOKEN_THRESHOLD=10000

# Number of recent messages for context (default: 5)
RECENT_MESSAGES_COUNT=5

# Session Storage Path
SESSION_STORAGE_PATH=data/sessions

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
